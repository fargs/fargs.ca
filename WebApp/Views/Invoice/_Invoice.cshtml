<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Details</strong>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Description</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.InvoiceDetails)
            {
                <tr>
                    <td width="80%">
                        <span class="invoice-description">@Html.Raw(item.Description)</span>
                        @if (!string.IsNullOrEmpty(item.DiscountDescription))
                        {                            
                            <div class="text-danger"><strong>@item.DiscountDescription</strong></div>
                        }
                        @if (ViewBag.FormMode == FormModes.Edit || ViewBag.FormMode == FormModes.Add)
                        {
                            <label style="padding-top: 10px;">Notes</label>
                            <textarea rows="3" class="form-control" name="AdditionalNotes" value="@item.AdditionalNotes" placeholder="Notes"></textarea>
                        }
                        else
                        {
                            if (!string.IsNullOrEmpty(Model.InvoiceDetails.First().AdditionalNotes))
                            {
                                <label style="padding-top: 10px;">Notes</label>
                                <div>@item.AdditionalNotes</div>
                            }
                        }
                    </td>
                    <td width="20%">
                        @if (ViewBag.FormMode == FormModes.Edit || ViewBag.FormMode == FormModes.Add)
                        {
                            <div class="form-group">
                                <label class="control-label">Price</label>
                                <input type="text" name="Amount" class="form-control text-right" value="@item.Amount" />
                                <div class="help-block">Amount after rate adjustments</div>
                                <div class="control-label text-center">@item.Total.Value.ToString("C2")</div>
                            </div>
                        }
                        else
                        {
                            <div class="text-right">@item.Total.Value.ToString("C2")</div>
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td>
                    <div class="text-right"><strong>Sub-Total</strong></div>
                    <div class="text-right"><strong>Tax (@Model.TaxRateHst.Value.ToString("0%") HST)</strong></div>
                </td>
                <td>
                    <div class="text-right"><strong>@Model.SubTotal.Value.ToString("C2")</strong></div>
                    <div class="text-right"><strong>@Model.Hst.Value.ToString("C2")</strong></div>
                </td>
            </tr>
            <tr class="lead" style="background-color: #f5f5f5">
                <td>
                    <div class="text-right">Total</div>
                </td>
                <td>
                    <div class="text-right">@Model.Total.Value.ToString("C2")</div>
                </td>
            </tr>
        </tfoot>
    </table>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="well text-center">
            All cheques payable to @Model.ServiceProviderName. Thank you for your referral!
        </div>
    </div>
</div>