@using WebApp.FormModels
@model TaskViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">
        Delete Form
    </h4>
</div>
<div class="modal-body">
    <div class="alert alert-danger">You are about to permanentely delete this task <strong>@Model.Name</strong>. Would you like to continue?</div>
</div>
<div class="modal-footer">
    <button class="btn btn-success" onclick="deleteTask(@Model.Id)">Yes</button>
</div>