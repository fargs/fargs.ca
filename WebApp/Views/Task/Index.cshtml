@using Orvosi.Data.Filters
@model IEnumerable<Orvosi.Data.OTask>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Responsible Role
        </th>
        <th>
            Phase
        </th>
        <th>
            Task
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortName)
        </th>
        <th>
            Duration From Baseline
        </th>
        <th>
            Critical Path
        </th>
        <th>
            Reference Count
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.OrderBy(m => m.ResponsibleRoleId).ThenBy(m => m.TaskPhaseId).ThenBy(m => m.Sequence)) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetRole.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaskPhase.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DueDateDiff)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsCriticalPath)
        </td>
        <td>
            Templates: @item.ServiceRequestTemplateTasks.AsQueryable().AreNotDeleted().Count() <br />
            Requests:  @item.ServiceRequestTasks.Count()
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
