@using WebApp.FormModels
@using WebApp.Library
@using Orvosi.Data
@model ChangeClaimantForm

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">
        Claimant
    </h4>
</div>
<div class="modal-body">
    <form id="claimant-form">
        @Html.Hidden("ServiceRequestId", Model.ServiceRequestId)
        <div class="form-group">
            <label class="control-label">Claimant</label>
            @Html.TextBox("ClaimantName", Model.ClaimantName, new { @class = "form-control" })
        </div>
    </form>
</div>
<div class="modal-footer">
    <button class="btn btn-default" data-dismiss="modal">Close</button>
    <button class="btn btn-success" onclick="saveClaimant($('#claimant-form'), false)">Save</button>
</div>