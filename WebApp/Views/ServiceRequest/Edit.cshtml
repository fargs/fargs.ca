@using Orvosi.Data

@model WebApp.ViewModels.ServiceRequestViewModels.EditViewModel

<form action="~/ServiceRequest/Edit/@Model.ServiceRequestId" method="post" class="form-horizontal">

    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(c => c.ServiceRequestId)

    <div class="form-group">
        <label class="control-label col-md-2">Claimant</label>
        <div class="col-md-10">
            @Html.EditorFor(c => c.ClaimantName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(c => c.ClaimantName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Reference Id</label>
        <div class="col-md-10">
            @Html.EditorFor(c => c.CompanyReferenceId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(c => c.CompanyReferenceId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Additional Notes</label>
        <div class="col-md-10">
            @Html.TextAreaFor(c => c.AdditionalNotes, new { @class = "form-control", rows = 3 })
            @Html.ValidationMessageFor(c => c.AdditionalNotes, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Requested On</label>
        <div class="col-md-10">
            <div class="input-group date" style="width:100%" id="RequestedDatePicker">
                <input class="form-control" size="16" type="text" name="RequestedDate" id="RequestedDate">
                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-push-2 col-md-10">
            <button class="btn btn-primary" type="submit">Submit</button>
            <a href="~/ServiceRequest/Details/@Model.ServiceRequestId" class="btn btn-default">Cancel</a>
        </div>
    </div>

</form>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(function () {

            $('#DueDatePicker').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true
            });

            $('#RequestedDatePicker').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true
            });

        });
    </script>
}