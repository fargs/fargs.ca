@model InviteTeamMemberFormModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">
        Team Member
    </h4>
</div>
<div class="modal-body">
    <form id="newteammember-form">
        <input type="hidden" name="PhysicianId" value="@Model.PhysicianId" />
        <div class="form-group">
            <label class="control-label">Email</label>
            <div>
                @Html.TextBox("Email", Model.Email, new { @class = "form-control" })
                @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">Role</label>
            <div>
                @Html.DropDownList("RoleId", new SelectList(Model.ViewData.Roles, "Value", "Text"), string.Empty, new { @class = "form-control" })
                @Html.ValidationMessage("RoleId", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label">Title</label>
            <div>
                @Html.TextBox("Title", Model.Title, new { @class = "form-control" })
                @Html.ValidationMessage("Title", "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">FirstName</label>
            <div>
                @Html.TextBox("FirstName", Model.FirstName, new { @class = "form-control" })
                @Html.ValidationMessage("FirstName", "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">LastName</label>
            <div>
                @Html.TextBox("LastName", Model.LastName, new { @class = "form-control" })
                @Html.ValidationMessage("LastName", "", new { @class = "text-danger" })
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="submit" onclick="saveNewTeamMemberForm($('#newteammember-form'))" class="btn btn-primary">Save</button>
</div>