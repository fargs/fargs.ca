@using WebApp.Library.Extensions
@using Features = Orvosi.Shared.Enums.Features
@model CaseViewModel
<div style="padding-bottom:5px;">
    @if (ViewData.ViewTarget_Get() == ViewTarget.DaySheet)
    {
    <span style="padding-right:5px; font-size:16px;"><strong>@Model.StartTime.ToShortTimeSafe()</strong></span>
        <a href="@Url.Content("~/ServiceRequest/Details/" + Model.ServiceRequestId)" target="_blank" style="font-size:16px;">@Model.ClaimantName (@(Model.ServiceRequestId))</a>
    }
    else
    {
        <strong>@Model.ClaimantName (@(Model.ServiceRequestId))</strong>
    }
    @Html.Partial("~/Views/ServiceRequest/StatusLabel.cshtml", Model.ServiceRequestStatus)
    @Html.Partial("_ServiceStatusLabel2", Model.CancellationViewModel)
</div>
<div>
    <small class="text-muted">@Model.Company.Name</small>
    @if (!string.IsNullOrEmpty(Model.SourceCompany))
    {
        <small class="text-muted"> (@Model.SourceCompany)</small>
    }
</div>
<div>
    <small class="text-muted">@Model.Service.Name</small>
    @if (Model.MedicolegalTypeId.HasValue)
    {
        <small class="text-muted"> (@Model.MedicolegalType.Name)</small>
    }
</div>