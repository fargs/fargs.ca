@using WebApp.Library.Extensions
@model WebApp.ViewModels.ServiceRequestTaskViewModels.IndexViewModel

<h1>Tasks for</h1>
<div class="lead">@User.Identity.GetDisplayName()</div>

<ul>
    @foreach (var item in Model.Tasks)
    {
        <li>@item.TaskName - @item.ServiceRequestId - @item.ActualHours</li>
    }
</ul>
