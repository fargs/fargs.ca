@using WebApp.FormModels
@using WebApp.Library
@model AdditionalResourceForm

@{
    var viewDataService = DependencyResolver.Current.GetService<ViewDataService>();
    var teamMembers = viewDataService.GetCollaborationSelectList(Model.PhysicianId);
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">
        Resource Assignment
    </h4>
</div>
<div class="modal-body">
    <form id="resource-form">
        @Html.Hidden("PhysicianId", Model.PhysicianId)
        @Html.Hidden("ServiceRequestId", Model.ServiceRequestId)

        <div class="form-group">
            <label class="control-label">Team Member</label>
            @Html.DropDownList("UserId", new SelectList(teamMembers, "Value", "Text", Model.UserId), string.Empty, new { @class = "form-control" })
        </div>
    </form>
</div>
<div class="modal-footer">
    <button class="btn btn-success" onclick="saveResource($('#resource-form'))">Save</button>
</div>