@using Orvosi.Shared.Enums
@model WebApp.ViewModels.DashboardViewModels.Task

@if (Model.StatusId == TaskStatuses.ToDo)
{
    <span id='task-statuslabel-@Model.Id' class='label label-danger'>To Do</span>
}
else if (Model.StatusId == TaskStatuses.Waiting)
{
    <span id='task-statuslabel-@Model.Id' class='label label-warning'>Waiting</span>
}
else if (Model.StatusId == TaskStatuses.Done)
{
    <span id='task-statuslabel-@Model.Id' class='label label-success'>Done</span>
}
else if (Model.StatusId == TaskStatuses.Obsolete)
{
    <span id='task-statuslabel-@Model.Id' class='label label-info'>Obsolete</span>
}
