@using WebApp.Library.Extensions
@using System.Security.Claims
@using e = Model.Enums;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Orvosi Medical</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="~/" class="navbar-brand top-nav"><div class="image-logo-sm"></div></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Dashboard", "", "Dashboard", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Exams", "", "ServiceRequest", new { area = "" }, null)</li>
                        if (User.Identity.GetRoleId() == e.Roles.SuperAdmin || User.Identity.GetRoleId() == e.Roles.CaseCoordinator)
                        {
                            <li>@Html.ActionLink("Availability", "", "Availability", new { area = "" }, null)</li>
                            <li role="presentation" class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                    Admin <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Companies", "", "Company", new { area = "Admin" }, null)</li>
                                    <li>@Html.ActionLink("Locations", "", "Location", new { area = "Admin" }, null)</li>
                                    <li>@Html.ActionLink("Services", "", "Service", new { area = "Admin", parentId = e.ServicePortfolios.Physician }, null)</li>
                                    <li role="separator" class="divider"></li>
                                    <li>@Html.ActionLink("Users", "", "User", new { area = "Admin", parentId = e.RoleCategory.Physician }, null)</li>
                                    <li>@Html.ActionLink("Roles", "", "Role", new { area = "Admin" }, null)</li>
                                </ul>
                            </li>

                        }
                        if (User.Identity.GetRoleId() == e.Roles.SuperAdmin)
                        {

                        }
                        @*<li>@Html.ActionLink("Tasks", "", "ServiceRequestTask", new { area = "" }, null)</li>*@
                    }
                </ul>
                @Html.Action("_LoginPartial", "Account", new { area = "" })
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
    </div>
    <footer class="panel-footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="copyright text-muted small pull-left">Orvosi Inc. &copy; @DateTime.Now.Year. All Rights Reserved</div>
                    <div class="pull-right">
                        <ul class="list-inline quicklinks small">
                            <li>
                                <a href="#">Privacy Policy</a>
                            </li>
                            <li>
                                <a href="#">Terms of Use</a>
                            </li>
                            @*<li>
                                @SystemTime.Now()
                            </li>*@
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
