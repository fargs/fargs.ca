@model Model.Invoice
@using WebApp.Library.Enums

<div class="row">
    <div class="col-sm-6">
        <div class="image-logo-md"></div>
        <div class="lead">@Model.CompanyName</div>
    </div>
    <div class="col-sm-6">
        <div class="pull-right">
            <div>@Model.Address1</div>
            <div>@Model.Address2</div>
            <div>@Model.Address3</div>
            <div>@Model.Email</div>
            <div>@Model.PhoneNumber</div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>Bill To</strong>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="h1">@Model.BillToName</div>
                        <div>@Model.BillToAddress1</div>
                        <div>@Model.BillToAddress2</div>
                        <div>@Model.BillToAddress3</div>
                    </div>
                    <div class="col-sm-6">
                        <div class="h1 text-right text-danger">
                            <strong>INVOICE</strong>
                        </div>
                        <dl class="dl-horizontal pull-right text-right">
                            <dt>Invoice Number</dt>
                            <dd>@(string.IsNullOrEmpty(Model.InvoiceNumber) ? "TBD" : Model.InvoiceNumber)</dd>
                            <dt>Invoice Date</dt>
                            <dd>@Model.InvoiceDate.GetDateTimeFormats('d')[0]</dd>
                            <dt>Payment Due</dt>
                            <dd>@Model.DueDate.Value.GetDateTimeFormats('d')[0]</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Details</strong>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Description</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.InvoiceDetails)
            {
                <tr>
                    <td width="80%">
                        @MvcHtmlString.Create(item.Description)
                        @if (ViewBag.FormMode == FormMode.Edit || ViewBag.FormMode == FormMode.New)
                        {
                            <div class="form-group">
                                <label for="Notes" class="control-label">Notes</label>
                                <textarea rows="3" class="form-control" name="@item.AdditionalNotes"></textarea>
                            </div>
                        }
                        else
                        {
                            <br />
                            @item.AdditionalNotes
                        }
                    </td>
                    <td width="20%">
                        @if (ViewBag.FormMode == FormMode.Edit || ViewBag.FormMode == FormMode.New)
                        {
                            <div class="form-group">
                                <input type="text" name="Amount" class="form-control text-right" value="@item.Amount" />
                            </div>
                        }
                        else
                        {
                            <div class="text-right">@item.Amount.Value.ToString("C2")</div>
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td>
                    <div class="text-right"><strong>Sub-Total</strong></div>
                    <div class="text-right"><strong>Tax (HST)</strong></div>
                </td>
                <td>
                    <div class="text-right"><strong>@Model.SubTotal.Value.ToString("C2")</strong></div>
                    <div class="text-right"><strong>@Model.TaxRateHst.Value.ToString("0%")</strong></div>
                </td>
            </tr>
            <tr class="lead" style="background-color: #f5f5f5">
                <td>
                    <div class="text-right">Total</div>
                </td>
                <td>
                    <div class="text-right">@Model.Total.Value.ToString("C2")</div>
                </td>
            </tr>
        </tfoot>
    </table>
</div>