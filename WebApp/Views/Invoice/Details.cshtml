@model Model.Invoice
@using e = Model.Enums

<div class="container">
    @Html.Partial("DocumentHeader", Model)
    @Html.Partial("_Invoice", Model)
    <div class="row">
        <div class="col-sm-4">
            <a href="~/ServiceRequest/Details/@Model.InvoiceDetails.First().ServiceRequestId" class="btn btn-primary">Back to Service Request</a>
            <a href="~/Invoice/Dashboard" class="btn btn-primary">Back to Invoices Dashboard</a>
        </div>
        <div class="col-sm-4">

        </div>
        <div class="col-sm-4">
            @if (ViewBag.User.RoleId == e.Roles.SuperAdmin)
            {
                <div class="pull-right">
                    <a href="~/Invoice/Edit/@Model.Id" class="btn btn-primary">Edit</a>
                </div>
            }
        </div>
    </div>
</div>