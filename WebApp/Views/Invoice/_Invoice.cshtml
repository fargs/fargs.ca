@model Model.Invoice
@using WebApp.Library.Enums

<div class="row">
    <div class="col-sm-6">
        <div class="image-logo-md"></div>
        <div class="lead">@Model.ServiceProviderName</div>
    </div>
    <div class="col-sm-6">
        <div class="pull-right">
            <div>@Model.ServiceProviderAddress1</div>
            <div>@Model.ServiceProviderAddress2</div>
            <div>@(string.Format("{0}, {1} {2}", Model.ServiceProviderCity, Model.ServiceProviderProvince, Model.ServiceProviderCountry))</div>
            <div>@Model.ServiceProviderPostalCode</div>
            <div>@Model.ServiceProviderEmail</div>
            <div>@Model.ServiceProviderPhoneNumber</div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>Bill To</strong>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="h1">@Model.CustomerName</div>
                        <div>@Model.CustomerAddress1</div>
                        <div>@Model.CustomerAddress2</div>
                        <div>@(string.Format("{0}, {1} {2}", Model.CustomerCity, Model.CustomerProvince, Model.CustomerCountry))</div>
                        <div>@Model.CustomerPostalCode</div>
                        <div>@Model.CustomerEmail</div>
                    </div>
                    <div class="col-sm-6">
                        <div class="h1 text-right text-danger">
                            <strong>INVOICE</strong>
                        </div>
                        <dl class="dl-horizontal pull-right text-right">
                            <dt>Invoice Number</dt>
                            <dd>@Model.InvoiceNumber</dd>
                            <dt>Invoice Date</dt>
                            <dd>@Model.InvoiceDate.GetDateTimeFormats('d')[0]</dd>
                            <dt>Payment Due</dt>
                            <dd>@Model.DueDate.Value.GetDateTimeFormats('d')[0]</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
