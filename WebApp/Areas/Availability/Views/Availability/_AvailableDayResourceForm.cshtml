@model AvailableDayResourceForm

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">
        Resource Assignment
    </h4>
</div>
<div class="modal-body">
    <form id="availableday-resource-form">
        @Html.Hidden("AvailableDayId", Model.AvailableDayId)

        <div class="form-group">
            <label class="control-label">Team Member</label>
            @Html.DropDownList("UserId", new SelectList(Model.ViewData.TeamMembers, "Value", "Text", Model.UserId), string.Empty, new { @class = "form-control" })
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button class="btn btn-success" onclick="saveAvailableDayResource($('#availableday-resource-form'), false)">Save</button>
</div>
