@model IEnumerable<Orvosi.Data.ServiceRequestTemplateTask>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { ServiceRequestTemplateId = Model.First().ServiceRequestTemplateId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ServiceRequestTemplate.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Task.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sequence)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedUser)
        </th>
        <th>
            Depends On
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceRequestTemplate.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Task.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sequence)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedUser)
        </td>
        <td>
            @Html.ActionLink("Depends On", "Index", "ServiceRequestTemplateTaskRelated", new { ServiceRequestTemplateTaskId = item.Id }, new { })
             (@item.ServiceRequestTemplateTaskId.Count())
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
