@using WebApp.Library.Extensions
@model Orvosi.Data.PhysicianInsurance

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Delete Insurance Record For</h2>
<div class="h3 lead">@ViewBag.User.GetDisplayName()</div>

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            Insurer
        </dt>

        <dd>
            @Model.Insurer
        </dd>

        <dt>
            Policy Number
        </dt>

        <dd>
            @Model.PolicyNumber
        </dd>

        <dt>
            Expiry Date
        </dt>

        <dd>
            @(Model.ExpiryDate.HasValue ? Model.ExpiryDate.Value.ToOrvosiDateFormat() : string.Empty)
        </dd>

        <dt>
            Document
        </dt>

        <dd>
            <a class="btn btn-default" href="~/Admin/Document/Download/@Model.DocumentId"><i class="glyphicon glyphicon-download-alt"></i></a>
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index", new { userId = Model.PhysicianId })
        </div>
    }
</div>