@using WebApp.Library.Extensions
@using e = Model.Enums
@using Model
@model List<Invoice>

@{ 
    using (var db = new OrvosiEntities())
    {
        ViewBag.User = db.Users.Single(u => u.UserName == User.Identity.Name);
    }
}

<table class="table table-condensed table-hover table-responsive">
    <thead>
        <tr>
            <th></th>
            @if (ViewBag.User.RoleId == e.Roles.SuperAdmin)
            {
                <th>Physician</th>
            }
            <th>Company</th>
            <th>Invoice #</th>
            <th>Invoice Date</th>
            <th>Total (Before tax)</th>
            <th>Tax Rate</th>
            <th>Total (After tax)</th>
            <th>Submitted</th>
            <th>Payment Received</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model.OrderBy(i => i.InvoiceDate))
        {
            <tr>
                <td>
                    <div class="btn-group" style="width:100px">
                        @if (ViewBag.User.RoleId == e.Roles.Physician)
                        {
                            <a href="~/Invoice/Details/@invoice.Id" class="btn btn-default btn-sm">View</a>
                        }
                        else if (invoice.SentDate.HasValue)
                        {
                            <a href="~/Invoice/Details/@invoice.Id" class="btn btn-default btn-sm">View</a>
                            <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="caret"></span>
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="~/Invoice/Edit/@invoice.Id" class="btn btn-sm">Edit</a></li>
                                @if (ViewBag.User.RoleId == e.Roles.SuperAdmin)
                                {
                                    <li>
                                        <form action="~/Invoice/Unsubmit" method="post">
                                            @Html.Hidden("Id", invoice.Id)
                                            <input type="submit" class="form-control btn btn-sm" name="Unsubmit" value="Unsubmit" />
                                        </form>
                                    </li>
                                }
                                <li><a href="~/Invoice/Download/@invoice.ObjectGuid" class="btn btn-sm">Download</a></li>
                            </ul>
                        }
                        else
                        {
                            <a href="~/Invoice/Edit/@invoice.Id" class="btn btn-default btn-sm">Edit</a>
                            <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="caret"></span>
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="~/Invoice/Details/@invoice.Id" class="btn btn-sm">View</a></li>
                                @if (ViewBag.User.RoleId == e.Roles.SuperAdmin)
                                {
                                    <li>
                                        <form action="~/Invoice/Submit" method="post">
                                            @Html.Hidden("Id", invoice.Id)
                                            <input type="submit" class="form-control btn btn-sm" name="submit" value="Submit" />
                                        </form>
                                    </li>
                                }
                                <li><a href="~/Invoice/Download/@invoice.ObjectGuid" class="btn btn-sm">Download</a></li>
                            </ul>
                        }
                    </div>
                </td>
                @if (ViewBag.User.RoleId == e.Roles.SuperAdmin)
                {
                    <td>@invoice.ServiceProviderName</td>
                }
                <td>@invoice.CustomerName</td>
                <td>@invoice.InvoiceNumber</td>
                <td>@invoice.InvoiceDate.ToOrvosiDateFormat()</td>
                <td>@invoice.SubTotal.Value.ToString("C2")</td>
                <td>@invoice.TaxRateHst.Value.ToString("0%")</td>
                <td>@invoice.Total.Value.ToString("C2")</td>
                <td>
                    @if (invoice.SentDate.HasValue)
                    {
                        <div>
                            <span class="glyphicon glyphicon-ok" style="font-size: 100%"></span>
                            <strong class="text-success">@invoice.SentDate.ToOrvosiDateFormat()</strong>
                        </div>
                    }
                    else
                    {
                        if (ViewBag.User.RoleId == e.Roles.SuperAdmin)
                        {
                            <form action="~/Invoice/Submit" method="post">
                                @Html.Hidden("Id", invoice.Id)
                                <input type="submit" class="form-control btn btn-sm btn-danger" name="submit" value="Submit" />
                            </form>
                            @*<div id="submit-invoice">
                                @Ajax.ActionLink("Submit", "Submit", "Invoice", new { id = invoice.Id }, new AjaxOptions { HttpMethod = "Post", InsertionMode = InsertionMode.Replace, UpdateTargetId = "submit-invoice" }, new { @class = "btn btn-sm btn-danger" })
                            </div>*@
                        }
                        else
                        {
                            <div>No</div>
                        }
                    }
                </td>
                <td>
                    @(invoice.PaymentReceivedDate.HasValue ? invoice.PaymentReceivedDate.Value.ToOrvosiDateFormat() : "No")
                </td>
            </tr>
        }
    </tbody>
</table>
