@using Model
@using Model.Enums

@model Model.ServiceRequest

<form action="~/ServiceRequest/Edit/@Model.Id" method="post" class="form-horizontal">

    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(c => c.Id)

    <div class="form-group">
        <label class="control-label col-md-2">Claimant</label>
        <div class="col-md-10">
            @Html.EditorFor(c => c.ClaimantName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(c => c.ClaimantName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Due Date</label>
        <div class="col-md-10">
            <div class="input-group date" style="width:100%" id="DueDatePicker">
                @Html.TextBox("DueDate", Model.DueDate, new { @class = "form-control", size = "16" })
                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
            </div>
            @Html.ValidationMessage("DueDate", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Reference Id</label>
        <div class="col-md-10">
            @Html.EditorFor(c => c.CompanyReferenceId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(c => c.CompanyReferenceId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Additional Notes</label>
        <div class="col-md-10">
            @Html.TextAreaFor(c => c.Notes, new { @class = "form-control", rows = 3 })
            @Html.ValidationMessageFor(c => c.Notes, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-push-2 col-md-10">
            <button class="btn btn-primary" type="submit">Submit</button>
            <a href="~/ServiceRequest/Index" class="btn btn-primary">Back to List</a>
        </div>
    </div>

</form>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(function () {

            $('#DueDatePicker').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true
            });

        });
    </script>
}