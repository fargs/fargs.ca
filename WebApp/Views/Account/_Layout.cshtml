<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Orvosi Medical</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="row well" style="background-color: white; margin-top: 50px">
                    <div class="col-md-4" style="vertical-align: middle">
                        <a href="~/"><div class="image-logo-md"></div></a>
                        <div class="help-block">@RenderSection("instructions", required: false)</div>
                    </div>
                    <div class="col-md-8">
                        @RenderBody()
                    </div>
                </div>
                <div class="row">
                    @RenderSection("footer", required: true)
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
