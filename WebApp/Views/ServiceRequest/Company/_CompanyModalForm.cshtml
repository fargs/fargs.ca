@using WebApp.FormModels
@using WebApp.Library
@using Orvosi.Data
@model ChangeCompanyForm

@{
    var viewDataService = DependencyResolver.Current.GetService<ViewDataService>();
    var companies = viewDataService.GetPhysicianCompanySelectList(Model.PhysicianId);
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">
        Company
    </h4>
</div>
<div class="modal-body">
    <form id="company-form">
        @Html.Hidden("ServiceRequestId", Model.ServiceRequestId)
        <div class="form-group">
            <label class="control-label">Company</label>
            @Html.DropDownList("CompanyId", new SelectList(companies, "Value", "Text", Model.CompanyId), string.Empty, new { @class = "form-control" })
        </div>
    </form>
</div>
<div class="modal-footer">
    <button class="btn btn-default" data-dismiss="modal">Close</button>
    <button class="btn btn-success" onclick="saveCompany($('#company-form'), false)">Save</button>
</div>