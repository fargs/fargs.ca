@using Features = Orvosi.Shared.Enums.Features
@using WebApp.Library.Extensions
@model int
@{
    var features = User.Identity.GetFeatures();
}

@if (features.Contains(Features.ServiceRequest_Google.CreateEvent))
{
    <button onclick="addGoogleCalendarEvent(@Model)" class="btn btn-primary">Add Event to Google Calendar</button>
}

