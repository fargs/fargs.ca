<script type="text/javascript">

    function createBoxCaseFolder(serviceRequestId) {
        let url = '@Url.Content("~/ServiceRequest/CreateBoxCaseFolder")';
        boxExecute(url, {
            serviceRequestId: serviceRequestId
        });
    }
    function updateBoxCaseFolderName(serviceRequestId) {
        let url = '@Url.Content("~/ServiceRequest/UpdateBoxCaseFolderName")';
        boxExecute(url, {
            serviceRequestId: serviceRequestId
        });
    }
    function shareBoxFolder(form) {
        let url = '@Url.Content("~/ServiceRequest/ShareBoxFolder")';
        boxExecute(url, $(form).serialize());
    }
    function unshareBoxFolder(form) {
        let url = '@Url.Content("~/ServiceRequest/UnshareBoxFolder")';
        boxExecute(url, $(form).serialize());
    }
    function syncBoxFolder(form) {
        let url = '@Url.Content("~/ServiceRequest/SyncBoxFolder")';
        boxExecute(url, $(form).serialize());
    }
    function unsyncBoxFolder(form) {
        let url = '@Url.Content("~/ServiceRequest/UnsyncBoxFolder")';
        boxExecute(url, $(form).serialize());
    }
    function boxExecute(url, params) {

        var loader = $('#box-loader');
        loader.show();
        $.post(url, params)
            .done(function (data) {
                boxInfoChanged(serviceRequestId);
            })
            .always(function (data) {
                loader.hide();
            });
    }
</script>
