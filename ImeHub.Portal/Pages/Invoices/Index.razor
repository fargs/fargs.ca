@page "/invoices"
@using ImeHub.Portal.Components.App.Invoices
@using Microsoft.EntityFrameworkCore

@inject ImeHub.Portal.Services.DateTimeService.DateTimeProvider _dateTime

<Header></Header>
<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="pb-5 border-b border-gray-200">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
            Pending Download
        </h3>
    </div>

    <div class="flex flex-col">
        <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Assessor
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Invoice Number
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Invoice Date
                                </th>
                                <th scope="col" class="relative px-6 py-3 text-right">
                                    Download Links
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @if (IsLoading)
                            {
                                <tr>
                                    <td colspan="4">Loading</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var grouping in PendingDownloadListItems)
                                {
                                    <tr>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                            @grouping.Key.ServiceProviderName
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            @grouping.Key.InvoiceNumber
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            @grouping.Key.InvoiceDate.ToLongDateString()
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                            @foreach (var listItem in grouping.ListItems)
                                            {
                                                var daysToExpiry = (listItem.ExpiryDate - _dateTime.Now()).Days;
                                                var downloadsLeft = listItem.AllowedAttempts - listItem.ActualAttempts;

                                                <div>
                                                    <a href="invoices/download/@listItem.ObjectGuid" class="text-indigo-600 hover:text-indigo-900">Download</a>
                                                </div>
                                                <div class="text-sm text-gray-300">

                                                    @if (daysToExpiry == 0)
                                                    {
                                                        <span>
                                                            Expires today
                                                        </span>
                                                    }
                                                    else if (daysToExpiry == 1)
                                                    {
                                                        <span>
                                                            Expires in @daysToExpiry day
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span>
                                                            Expires in @daysToExpiry days
                                                        </span>
                                                    }
                                                    <div class="text-sm text-gray-300">
                                                        @if (downloadsLeft == 1)
                                                        {
                                                            <span>
                                                                @downloadsLeft download left
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span>
                                                                @downloadsLeft downloads left
                                                            </span>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

