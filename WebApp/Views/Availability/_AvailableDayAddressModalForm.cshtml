@using WebApp.FormModels
@using WebApp.Library

@model AvailableDayAddressForm

@{
    var context = User.Identity.GetUserContext();
    var viewDataService = DependencyResolver.Current.GetService<ViewDataService>();
    var addresses = viewDataService.GetPhysicianAddressSelectList(Model.PhysicianId);
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">
        Change Address
    </h4>
</div>
<div class="modal-body">
    <form id="change-available-day-address-form">
        <input type="hidden" name="AvailableDayId" value="@Model.AvailableDayId" />
        <div class="form-group">
            <label class="control-label">Address</label>
            <div>
                @Html.DropDownList("AddressId", new SelectList(addresses, "Value", "Text", "Group.Name", Model.AddressId), string.Empty, new { @class = "form-control" })
                @Html.ValidationMessage("AddressId", "", new { @class = "text-danger" })
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="submit" onclick="saveAvailableDayAddressForm($('#change-available-day-address-form'))" class="btn btn-primary">Save</button>
</div>
