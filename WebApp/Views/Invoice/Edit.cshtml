@model Orvosi.Data.Invoice
@using WebApp.Library.Enums

<div class="container">
    @Html.Partial("DocumentHeader", Model)
    <form action="~/Invoice/Edit" method="post">
        <input type="hidden" name="Id" value="@Model.InvoiceDetails.First().Id" />
        @Html.Partial("_Invoice", Model)
        <div class="btn-toolbar">
            <div class="btn-group">
                <a href="~/Invoice/Details/@Model.Id" class="btn btn-default">Cancel</a>
            </div>
            <div class="btn-group pull-right">
                <button type="submit" name="button" value="SaveAndClose" class="btn btn-default">Save and Close</button>
                <button type="submit" name="button" value="SaveAndSubmit" class="btn btn-primary">Save and Submit</button>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    <script type="text/javascript">
        $(function () {

            $('#InvoiceDatePicker').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true
            });

        });
    </script>
}

