@model Orvosi.Data.Invoice
@using WebApp.Library.Enums
@using WebApp.Library.Extensions

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>Bill To</strong>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-6">
                        <div class="h1">@Model.CustomerName</div>
                        <div>@Model.CustomerAddress1</div>
                        <div>@Model.CustomerAddress2</div>
                        <div>@(string.Format("{0}, {1} {2}", Model.CustomerCity, Model.CustomerProvince, Model.CustomerCountry))</div>
                        <div>@Model.CustomerPostalCode</div>
                        <div>@Model.CustomerEmail</div>
                    </div>
                    <div class="col-xs-6">
                        <div class="h1 text-right text-danger">
                            <strong>INVOICE</strong>
                        </div>
                        <dl class="dl-horizontal pull-right text-right">
                            <dt>Invoice Number</dt>
                            <dd>@Model.InvoiceNumber</dd>
                            <dt>Invoice Date</dt>
                            <dd>
                                @if (ViewBag.FormMode == FormModes.Edit || ViewBag.FormMode == FormModes.Add)
                                {
                                    <div class="input-group date" style="width:100%" id="InvoiceDatePicker">
                                        @Html.TextBox("InvoiceDate", Model.InvoiceDate.ToOrvosiDateFormat(), new { @class = "form-control" })
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                    </div>
                                }
                                else
                                {
                                    @Model.InvoiceDate.ToOrvosiDateFormat()
                                }
                            </dd>
                            <dt>Payment Terms</dt>
                            <dd>NET 90 Days</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Details</strong>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Description</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.InvoiceDetails)
            {
                <tr>
                    <td width="80%">
                        @if (ViewBag.FormMode == FormModes.Edit || ViewBag.FormMode == FormModes.Add)
                        {
                            <textarea rows="3" class="form-control" name="Description" placeholder="Description">@item.Description</textarea>
                        }
                        else
                        {
                            <span class="invoice-description">@Html.Raw(item.Description)</span>
                            <br />
                        }
                        @if (!string.IsNullOrEmpty(item.DiscountDescription))
                        {
                            <div class="text-danger"><strong>@item.DiscountDescription</strong></div>
                            <br />
                        }
                        @if (ViewBag.FormMode == FormModes.Edit || ViewBag.FormMode == FormModes.Add)
                        {
                            <label style="padding-top: 10px;">Notes</label>
                            <textarea rows="3" class="form-control" name="AdditionalNotes" placeholder="Notes">@item.AdditionalNotes</textarea>
                        }
                        else
                        {
                            if (!string.IsNullOrEmpty(item.AdditionalNotes))
                            {
                                <label style="padding-top: 10px;">Notes</label>
                                <div>@item.AdditionalNotes</div>
                            }
                        }
                    </td>
                    <td width="20%">
                        @if (ViewBag.FormMode == FormModes.Edit || ViewBag.FormMode == FormModes.Add)
                        {
                            <div class="form-group">
                                <label class="control-label">Price</label>
                                <input type="text" name="Amount" class="form-control text-right" value="@item.Amount" />
                                <div class="help-block">Amount after rate adjustments</div>
                                <div class="control-label text-center">@item.Total.Value.ToString("C2")</div>
                            </div>
                        }
                        else
                        {
                            <div class="text-right">@item.Total.Value.ToString("C2")</div>
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td>
                    <div class="text-right"><strong>Sub-Total</strong></div>
                    <div class="text-right"><strong>Tax (@Model.TaxRateHst.Value.ToString("0%"))</strong></div>
                </td>
                <td>
                    <div class="text-right"><strong>@Model.SubTotal.Value.ToString("C2")</strong></div>
                    <div class="text-right"><strong>@Model.Hst.Value.ToString("C2")</strong></div>
                </td>
            </tr>
            <tr class="lead" style="background-color: #f5f5f5">
                <td>
                    <div class="text-right">Total</div>
                </td>
                <td>
                    <div class="text-right">@Model.Total.Value.ToString("C2")</div>
                </td>
            </tr>
        </tfoot>
    </table>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="well text-center">
            All cheques payable to @Model.ServiceProviderName. Thank you for your referral!
        </div>
    </div>
</div>