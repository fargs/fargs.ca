@model WebApp.Views.Comment.CommentForm

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">
        Delete Note Confirmation
    </h4>
</div>
<div class="modal-body">
    <form id="comment-form">
        @Html.Hidden("CommentId", Model.CommentId)
    </form>
    <div>
        This will permanently delete this note. Are you sure?
    </div>
</div>
<div class="modal-footer">
    <button type="button" data-dismiss="modal">Cancel</button>
    <button class="btn btn-danger" onclick="deleteComment('@Model.CommentId')">Delete</button>
</div>
