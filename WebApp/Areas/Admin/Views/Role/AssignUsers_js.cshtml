@using WebApp.Library;
@model WebApp.Areas.Admin.ViewModels.Role.AssignUsersViewModel

<script type="text/javascript">
    // Generate client side model from server object


    $(document).ready(function () {
        var self = this;
        self.roleID = '@Model.RoleId';

        $('#AssignUsers').on('change', 'input[type=checkbox]', function (e) {
            console.log(this.name + ' ' + this.value + ' ' + this.checked);
            var url = '@Url.Content("~/Role/AssignUser")';
            $.post(
                url,
                {
                    roleID: self.roleID,
                    userID: this.value,
                    isAssigned: this.checked
                }
            ).done(function (response) {
                $("#AssignUsersList").html(response);
            });
        });

    });
</script>
