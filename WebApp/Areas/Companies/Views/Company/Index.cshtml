        {
            <div>select a company</div>
        }
        else
        {
            @Html.Partial("ReadOnly", Model.ReadOnly)
        }
    </div>
</div>
@Html.Partial("ModalContainer")
@Html.Partial("ModalContainerSmall")

@section Scripts{

    @Html.Partial("IndexJS")
}