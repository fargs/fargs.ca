@using WebApp.Library.Extensions.Model
@using WebApp.Library.Helpers
@using Orvosi.Shared.Enums
@model WebApp.Areas.Admin.ViewModels.ListViewModel

<h2>Users</h2>

<p>
    <a class="btn btn-success" href="~/Account/Register"><i class="glyphicon glyphicon-plus"></i></a>
</p>

<ul class="nav nav-tabs">
    @Html.MenuLink("No Role", "Index", "User", "Admin", null)
    @Html.MenuLink("Physicians", "Index", "User", "Admin", RoleCategories.Physician)
    @Html.MenuLink("Company Admins", "Index", "User", "Admin", RoleCategories.Company)
    @Html.MenuLink("Staff", "Index", "User", "Admin", RoleCategories.Staff)
    @Html.MenuLink("Admin", "Index", "User", "Admin", RoleCategories.Admin)
</ul>
<div class="margin-top: 20px">
    &nbsp;
</div>
@foreach (var item in Model.Users)
{
    <div id="UserTableRows" class="row">
        <div class="col-md-12">
            <span class="h4 pull-left">@item.DisplayName</span>
            <nav>
                <ul class="nav nav-pills nav-condensed">
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false">
                            <i class="glyphicon glyphicon-menu-hamburger"></i>
                        </a>
                        <ul class="dropdown-menu nav-uncondensed" role="menu">
                            <li role="presentation">@Html.ActionLink("Profile", "UserProfile", "User", new { area = "Admin", id = item.Id }, new { })</li>
                            <li role="presentation">@Html.ActionLink("Notes", "Notes", "User", new { area = "Admin", id = item.Id }, new { })</li>
                            @if (item.RoleId == AspNetRoles.Physician)
                            {
                                <li role="presentation">@Html.ActionLink("Additional Info", "Edit", "Physician", new { area = "Admin", userId = item.Id }, new { })</li>
                                <li role="presentation">@Html.ActionLink("Licences", "Index", "PhysicianLicence", new { area = "Admin", userId = item.Id }, new { })</li>
                                <li role="presentation">@Html.ActionLink("Insurance", "Index", "PhysicianInsurance", new { area = "Admin", userId = item.Id }, new { })</li>
                                <li role="presentation">@Html.ActionLink("Companies", "Companies", "User", new { area = "Admin", userId = item.Id }, new { })</li>
                                <li role="presentation">@Html.ActionLink("Service Catalogue", "Index", "ServiceCatalogue", new { area = "", userId = item.Id }, new { })</li>
                            }
                            <li role="separator" class="divider"></li>
                            <li role="presentation">@Html.ActionLink("Account", "Account", "User", new { area = "Admin", id = item.Id }, new { })</li>
                            <li role="presentation">@Html.ActionLink("Send Activation Email", "SendActivationEmail", "User", new { area = "Admin", userId = item.Id }, new { })</li>
                            <li role="presentation">@Html.ActionLink("Reset Password", "ResetPassword", "User", new { area = "Admin", userId = item.Id }, new { })</li>
                            <li role="presentation">@Html.ActionLink("Change Password", "ChangePassword", "User", new { area = "Admin", id = item.Id }, new { })</li>
                            @*<li role="presentation"><a id="DeleteButton" data-userid="@item.Id" role="button">Remove</a></li>*@
                        </ul>

                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div><strong>User Name:</strong> @item.UserName</div>
            <div><strong>Email:</strong> @item.Email <span class="@(item.EmailConfirmed == true ? "label label-success" : "label label-warning")">@(item.EmailConfirmed == true ? "Confirmed" : "Pending")</span></div>
            <div><strong>Role:</strong> @item.RoleName</div>
            <div><span class="@(item.IsTestRecord == true ? "label label-warning" : "")">@(item.IsTestRecord == true ? "Test Record" : "")</span></div>
        </div>
    </div>
    <hr />
}

@section Scripts{

    @*@Scripts.Render("~/bundles/knockout")*@

    @Html.Partial("Index_js", Model)

}