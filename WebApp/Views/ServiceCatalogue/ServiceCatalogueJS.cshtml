<script type="text/javascript">

    function serviceCataloguePartialView(params) {
        let url = '@Url.Content("~/ServiceCatalogue/_Details")';
        $.get(url, params)
        .done(function (result) {
            serviceCataloguePartialViewLoaded(result);
        });
    }

    function showServiceCatalogueEditForm(params) {
        let url = '@Url.Content("~/ServiceCatalogue/Edit")';
        $.get(url, params)
        .done(function (result) {
            $('#modal-content').html(result);
            $('#modal-container').modal('show');
        });
    }

    function serviceCatalogueSaveChanges(form) {
        let url = '@Url.Content("~/ServiceCatalogue/Edit")';
        $.post(url,
            form.serialize()
        ).done(function (data) {
            $('#modal-container').modal('hide');
            serviceCataloguePartialView(data);
        });
    }

    function serviceCataloguePartialViewLoaded(html) {
        // empty and should be overriden
    }

</script>