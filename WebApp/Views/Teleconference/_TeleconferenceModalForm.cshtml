@using WebApp.Library
@using WebApp.FormModels

@model TeleconferenceForm

@{
    var session = DependencyResolver.Current.GetService<SessionService>();
    var features = session.AuthorizedFeatures;
    var identity = session.identity;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">
        Teleconference
    </h4>
</div>
<div class="modal-body">
    <form id="teleconference-form">
        @Html.Hidden("ServiceRequestId", Model.ServiceRequestId)
        @Html.Hidden("TeleconferenceId", Model.TeleconferenceId)
        <div class="form-group">
            <label class="control-label">Appointment Date</label>
            <input type="date" name="AppointmentDate" value="@Model.AppointmentDate.ToOrvosiDateFormat()" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Start Time</label>
            <input type="time" name="StartTime" value="@Model.StartTime" class="form-control" />
        </div>
    </form>
</div>
<div class="modal-footer">
    <button class="btn btn-success" onclick="saveTeleconference($('#teleconference-form'), false)">Save</button>
</div>