@model Model.PhysicianToCompanyServiceRequestInvoicePreview
<form action="~/Invoice/Create" method="post">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="image-logo-md"></div>
                <div class="lead">@Model.CompanyName</div>
            </div>
            <div class="col-sm-6">
                <div class="pull-right">
                    <div>@Model.Address1</div>
                    <div>@Model.Address2</div>
                    <div>@Model.Address3</div>
                    <div>@Model.Email</div>
                    <div>@Model.PhoneNumber</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong>Bill To</strong>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="lead">@Model.BillToName</div>
                                <div>@Model.BillToAddress1</div>
                                <div>@Model.BillToAddress2</div>
                                <div>@Model.BillToAddress3</div>
                            </div>
                            <div class="col-sm-6">
                                <dl class="dl-horizontal pull-right text-right">
                                    <dt>Invoice Number</dt>
                                    <dd>000001</dd>
                                    <dt>Invoice Date</dt>
                                    <dd>@Model.InvoiceDate.GetDateTimeFormats('d')[0]</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>Details</strong>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td width="80%">
                            <div>Examination: @Model.DescriptionLine1</div>
                            <div>Location: @Model.DescriptionLine2</div>
                            <div>Claimant: @Model.DescriptionLine3</div>
                        </td>
                        <td width="20%">
                            <div class="text-right">@Model.SubTotal</div>
                        </td>
                    </tr>
                </tbody>
                <tfoot style="background-color: #f5f5f5">
                    <tr>
                        <td>
                            <div class="text-right">Sub-Total</div>
                            <div class="text-right">Tax (HST)</div>
                        </td>
                        <td>
                            <div class="text-right">@Model.SubTotal</div>
                            <div class="text-right">@Model.TaxRateHst</div>
                        </td>
                    </tr>
                    <tr class="lead">
                        <td>
                            <div class="text-right">Total</div>
                        </td>
                        <td>
                            <div class="text-right">@Model.Total</div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="row">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</form>