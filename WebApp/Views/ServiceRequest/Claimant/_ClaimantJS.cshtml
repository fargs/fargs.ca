<script type="text/javascript">

    let claimantBaseUri = '@Url.Content("~/ServiceRequest/")';

    function showChangeClaimantForm(serviceRequestId) {
        let url = claimantBaseUri + 'ShowChangeClaimantForm';
        $.get(url, {
            serviceRequestId: serviceRequestId
        }).done(function (result) {
            $('#modal-content').html(result);
            $('#modal-container').modal('toggle');
        });
    }

    function saveClaimant(form) {
        let url = claimantBaseUri + 'ChangeClaimant';
        $.post(url,
            form.serialize()
        ).done(function (data) {
            $('#modal-container').modal('toggle');
            toastr.success("Changes was saved successfully.");
            claimantChanged(data.serviceRequestId)
        })
        .error(function (result) {
            $('#modal-content').html(result.responseText);
        });
    }

</script>
