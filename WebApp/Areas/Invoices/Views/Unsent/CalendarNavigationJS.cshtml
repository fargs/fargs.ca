    function initCalendarNavigation() {
        $('#calendar-navigation-datepicker').datepicker({
            startView: "months",
            minViewMode: "months",
            format: "MM yyyy",
            autoclose: true
        });

        $('#calendar-navigation-datepicker').on('changeMonth', calendarNavigationValueChanged);
    }
    function calendarNavigationValueChanged(e) {
        let val = e.date.toISOString().substring(0, 10);
        $('#selected-month').val(val);
        calendarNavigationChanged(val);
    }
    function navigateToMonth(selectedDate) {
        $('#selected-month').val(selectedDate);
        calendarNavigationChanged(selectedDate);
    }
