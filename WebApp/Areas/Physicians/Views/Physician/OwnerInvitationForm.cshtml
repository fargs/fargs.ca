@model OwnerInvitationFormModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">
        Invitation
    </h4>
</div>
<div class="modal-body">
    <form id="physicianinvite-form">
        @Html.Hidden("PhysicianId", Model.PhysicianId)
        <div class="form-group">
            <label class="control-label">From Email</label>
            <div>
                @Html.TextBox("FromEmail", Model.FromEmail, new { @class = "form-control" })
                @Html.ValidationMessage("FromEmail", "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">From Display Name</label>
            <div>
                @Html.TextBox("FromName", Model.FromName, new { @class = "form-control" })
                @Html.ValidationMessage("FromName", "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">To Email</label>
            <div>
                @Html.TextBox("ToEmail", Model.ToEmail, new { @class = "form-control" })
                @Html.ValidationMessage("ToEmail", "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">To Name</label>
            <div>
                @Html.TextBox("ToName", Model.ToName, new { @class = "form-control" })
                @Html.ValidationMessage("ToName", "", new { @class = "text-danger" })
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="submit" onclick="saveOwnerInvitationForm($('#physicianinvite-form'))" class="btn btn-primary">Save</button>
</div>