
<script type="text/javascript">

    function showBookingForm(availableSlotId) {
        var url = '@Url.Content("~/ServiceRequest/ShowBookingForm")';

        $.get(url, {
            availableSlotId: availableSlotId
        }).done(function (result) {
            $('#modal-content').html(result);
            $('#modal-container').modal('toggle');
        });
    }

    function bookAssessment(form) {

        var url = '@Url.Content("~/ServiceRequest/BookAssessment")';

        $.post(url,
            form.serialize()
        ).done(function (data) {
            $('#modal-container').modal('toggle');
            toastr.success("Saved successfully.");
            bookingChanged(data.serviceRequestId);
        }).error(function (result) {
            $('#modal-content').html(result.responseText);
        });
    }

    function bookingChanged(data) {
        // template method that should be overriden
    };

</script>