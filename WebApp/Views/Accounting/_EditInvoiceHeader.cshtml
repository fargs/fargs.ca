@using WebApp.Library.Extensions
@model Orvosi.Shared.Model.Invoice
<form id="edit-invoice-header-form">
    <input type="hidden" id="ServiceRequestId" name="ServiceRequestId" />
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">
            <span id="ClaimantName"></span>
        </h4>
        <div class="small text-muted">
            Invoice <span id="InvoiceNumber"></span>
        </div>
    </div>
    <div class="modal-body">
        <input type="hidden" id="Id" name="Id" value="@Model.Id" />
        <div class="form-group">
            <label class="control-label">Email To</label>
            <input type="text" class="form-control" id="Customer.BillingEmail" name="Customer.BillingEmail" value="@Model.Customer.BillingEmail" />
        </div>
        <div class="form-group">
            <label class="control-label">Invoice Date</label>
            <div class="input-group date" style="width:100%" id="InvoiceDatePicker">
                <input class="form-control" size="16" type="text" name="InvoiceDate" id="InvoiceDate" value="@Model.InvoiceDate.ToOrvosiDateFormat()">
                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">Tax Rate (@Model.Customer.Province)</label>
            <input type="text" class="form-control" id="TaxRateHst" name="TaxRateHst" value="@Model.TaxRateHst" />
        </div>
        <div class="form-group">
            <label class="control-label">Payment Terms in Days</label>
            <input type="number" class="form-control" id="Terms" name="Terms" value="@Model.Terms" />
        </div>
    </div>
    <div class="modal-footer">
        <input class="btn btn-success" type="button" onclick="invoiceHeaderSaveChanges()" value="Save" />
    </div>
</form>

<script type="text/javascript">
    $(function () {

        $('#InvoiceDatePicker').datepicker({
            format: 'yyyy-mm-dd',
            autoclose: true
        });
    });
</script>