<script type="text/javascript">

    let serviceBaseUri = '@Url.Content("~/ServiceRequest/")';

    function showChangeServiceForm(serviceRequestId) {
        let url = serviceBaseUri + 'ShowChangeServiceForm';
        $.get(url, {
            serviceRequestId: serviceRequestId
        }).done(function (result) {
            $('#modal-content').html(result);
            $('#modal-container').modal('toggle');
        });
    }

    function saveService(form) {
        let url = serviceBaseUri + 'ChangeService';
        $.post(url,
            form.serialize()
        ).done(function (data) {
            $('#modal-container').modal('toggle');
            toastr.success("Changes was saved successfully.");
            serviceChanged(data.serviceRequestId)
        })
        .error(function (result) {
            $('#modal-content').html(result.responseText);
        });
    }

</script>
