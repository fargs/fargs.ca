@using WebApp.Library.Extensions
@model IndexViewModel

<div style="display:flex; align-items:stretch; padding-bottom: 10px;">
    <div id="company-list-container">
        @Html.Partial("List", Model.List)
    </div>
    <div id="company-readonly-container" style="display:flex;">
