@model Model.PhysicianToCompanyServiceRequestInvoicePreview

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="lead">@Model.CompanyName</div>
            <div>@Model.Address1</div>
            <div>@Model.Address2</div>
            <div>@Model.Address3</div>
            <div>@Model.Email</div>
            <div>@Model.PhoneNumber</div>
        </div>
        <div class="col-md-push-6 col-md-3">
            <dl class="dl-horizontal">
                <dt>Invoice Number:</dt>
                <dd>000001</dd>
                <dt>Invoice Date:</dt>
                <dd>@Model.InvoiceDate</dd>
            </dl>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1">
            Bill To:
        </div>
        <div class="col-md-4">
            <div>@Model.BillToName</div>
            <div>@Model.BillToAddress1</div>
            <div>@Model.BillToAddress2</div>
            <div>@Model.BillToAddress3</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div>@Model.DescriptionLine1</div>
            <div>@Model.DescriptionLine2</div>
            <div>@Model.DescriptionLine3</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div>@Model.SubTotal</div>
            <div>@Model.TaxRateHst</div>
            <div>@Model.Total</div>
        </div>
    </div>
</div>