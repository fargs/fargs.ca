<script type="text/javascript">

    function noShow(form) {
        let url = '@Url.Content("~/ServiceRequest/ToggleNoShow")';
        $.post(url,
            form.serialize()
        ).done(function (data) {
            serviceRequestStatusChanged(data.serviceRequestId);
            tasklistChanged(data.serviceRequestId);
        });
    }
    function onHold(form) {
        let url = '@Url.Content("~/ServiceRequest/ToggleOnHold")';
        $.post(url,
            form.serialize()
        ).done(function (data) {
            serviceRequestStatusChanged(data.serviceRequestId);
            tasklistChanged(data.serviceRequestId);
        });
    }

    function showCaseDetails(serviceRequestId) {
        let url = '@Url.Content("~/ServiceRequest/Details2")';
        $.get(url, {
            serviceRequestId: serviceRequestId
        }).done(function (result) {
            $('#modal-content').html(result);
            $('#modal-container').modal('toggle');
        });
    }
</script>
