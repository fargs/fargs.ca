@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
}

<partial name="_StatusMessage" for="StatusMessage" />
<form method="post">
    <div class="shadow sm:rounded-md sm:overflow-hidden">
        <div class="bg-white py-6 px-4 space-y-6 sm:p-6">
            <div>
                <h3 class="text-lg leading-6 font-medium text-gray-900">
                    Change Password
                </h3>
            </div>
            <div asp-validation-summary="ModelOnly"></div>
            <div class="">
                <label asp-for="Input.OldPassword" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Input.OldPassword" class="mt-2 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" autocomplete="current-password" aria-required="true" />
            </div>
            <div class="">
                <label asp-for="Input.NewPassword" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Input.NewPassword" class="mt-2 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" autocomplete="new-password" aria-required="true" />
            </div>
            <div class="">
                <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Input.ConfirmPassword" class="mt-2 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="bg-indigo-600 border border-transparent rounded-md shadow-sm py-2 px-4 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Update password</button>
        </div>
    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}