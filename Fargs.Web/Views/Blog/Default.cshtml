@using Fargs.Web.Library.Extensions

@model Fargs.Web.Models.Post

@{
    ViewBag.Title = @Model.Title;
}

<div class="container">
    <div class="row">
        <div class="span12">
            <ul class="breadcrumb">
                <li><a href="@Url.Content("~/Blog")">Blog</a><span class="divider">/</span></li>
                <li class="active">@Model.Title</li>
            </ul>
            <div>
                @foreach (var item in @Model.Tags)
                {
                    <span class="label">
                        @item
                    </span>
                }
            </div>
            <div>
                @{
                    if (Model != null)
                    {
                    @Html.Markdown(Model.Body)
                    }   
                }
            </div>
        </div>
    </div>
</div>
