        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <h1>Orvosi</h1>
                        <hr class="intro-divider">
                        @if (Request.IsAuthenticated)
                        {
                            <h3>Welcome @(User.Identity.GetUserName())!</h3>
                            <br />
