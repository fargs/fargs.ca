@model ServiceFormModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">
        Service
    </h4>
</div>
<div class="modal-body">
    @Html.Partial("Service/ServiceForm", Model)
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    @if (Model.Id.HasValue)
    {
        <button type="submit" onclick="saveEditServiceForm('@Model.CompanyId', $('#company-service-form'))" class="btn btn-primary">Save</button>
    }
    else
    {
        <button type="submit" onclick="saveNewServiceForm('@Model.CompanyId')" class="btn btn-primary">Save</button>
    }
</div>