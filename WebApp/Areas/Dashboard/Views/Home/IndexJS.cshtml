<script type="text/javascript">

    $(function () {

        $.get('@Url.Content("~/Dashboard/Home/GetProfile")')
        .done(function (result) {
            $('#linked-profile').html(result);
        });

    })

    function showAcceptOwnershipForm(inviteId) {
        $.get('@Url.Content("~/Dashboard/Home/AcceptOwnershipForm")', {
            inviteId: inviteId
        })
        .done(function (result) {
            $('#modal-content').html(result);
            $('#modal-container').modal('toggle');
        });
    }

    function saveAcceptOwnershipForm(form) {
        $.post('@Url.Content("~/Dashboard/Home/AcceptOwnership")',
            form.serialize()
        )
        .done(function (result) {
            $('#modal-container').modal('toggle');
            toastr.success("Ownership accepted");
            window.reload();
        }).error(function (result) {
            $('#modal-content').html(result.responseText);
        });
    }

    function sendTestEmail() {
        $.post('@Url.Content("~/Dashboard/Home/SendTestEmail")', {
            to: $("#sendTestEmail_To").val()
        })
        .done(function (result) {
            toastr.success("Test email sent successfully");
        });
    }
</script>
