            <div class="row">
                <div class="col-lg-6">
                    <h2>Connect with Orvosi</h2>
                </div>
                @if (Request.IsAuthenticated)
                {
                    <div class="col-lg-6">
                        <ul class="list-inline intro-social-buttons">
                            <li class="pull-right">
                                <a href="~/Dashboard" class="btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Go To Your Portal</span></a>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                <div class="col-lg-6">
                    <ul class="list-inline banner-social-buttons">
                        <li>
                            <a href="~/Account/Login" class="btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Login</span></a>
                        </li>
                        <li>
