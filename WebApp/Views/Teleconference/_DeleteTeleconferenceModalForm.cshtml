@using WebApp.FormModels
@using WebApp.Library

@model TeleconferenceForm

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">
        Delete Teleconference Confirmation
    </h4>
</div>
<div class="modal-body">
    <form id="comment-form">
        @Html.Hidden("TeleconferenceId", Model.TeleconferenceId)
    </form>
    <div>
        This will permanently delete this teleconference. Are you sure?
    </div>
</div>
<div class="modal-footer">
    <button type="button" data-dismiss="modal">Cancel</button>
    <button class="btn btn-danger" onclick="deleteTeleconference('@Model.TeleconferenceId')">Delete</button>
</div>
