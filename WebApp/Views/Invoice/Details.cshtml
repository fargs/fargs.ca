@model Orvosi.Data.Invoice
@using e = Model.Enums

<div class="container">
    @Html.Partial("DocumentHeader", Model)
    @Html.Partial("_Invoice", Model)
    <div class="btn-toolbar">
        <div class="btn-group">
            <a href="~/ServiceRequest/Details/@Model.InvoiceDetails.First().ServiceRequestId" class="btn btn-default">Close</a>
        </div>
        <div class="btn-group pull-right">
            <a href="~/Invoice/Edit/@Model.Id" class="btn btn-default">Edit</a>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</div>