<script type="text/javascript">

    function showNewServiceForm() {
        var url = '@Url.Content("~/Services/Service/ShowNewServiceForm")';

        $.get(url)
        .done(function (result) {
            $('#modal-content-sm').html(result);
            $('#modal-container-sm').modal('toggle');
        });
    }

    function showEditServiceForm(serviceId) {
        var url = '@Url.Content("~/Services/Service/ShowEditServiceForm")';

        $.get(url, {
            serviceId: serviceId
        })
        .done(function (result) {
            $('#modal-content-sm').html(result);
            $('#modal-container-sm').modal('toggle');
        });
    }

    function showDeleteServiceConfirmation(serviceId) {
        var url = '@Url.Content("~/Services/Service/ShowDeleteServiceConfirmation")';

        $.get(url, {
            serviceId: serviceId
        })
        .done(function (result) {
            $('#modal-content-sm').html(result);
            $('#modal-container-sm').modal('toggle');
        });
    }

    function saveNewServiceForm(form) {
        var url = '@Url.Content("~/Services/Service/SaveNewServiceForm")';

        $.post(url,
            form.serialize()
        )
        .done(function (result) {
            $('#modal-container-sm').modal('toggle');
            toastr.success("Service added successfully");
            refreshServiceList();
        }).error(function (result) {
            $('#modal-content-sm').html(result.responseText);
        });
    }

    function saveEditServiceForm(form) {
        var url = '@Url.Content("~/Services/Service/SaveEditServiceForm")';

        $.post(url,
            form.serialize()
        )
        .done(function (result) {
            $('#modal-container-sm').modal('toggle');
            toastr.success("Service added successfully");
            refreshServiceList();
        }).error(function (result) {
            $('#modal-content-sm').html(result.responseText);
        });
    }

    function removeService(serviceId) {
        var url = '@Url.Content("~/Services/Service/Remove")';

        $.post(url, {
            serviceId: serviceId
        })
        .done(function () {
            toastr.success("Service removed successfully");
            refreshServiceList();
        });
    }

    function refreshServiceList() {
        let url = '@Url.Content("~/Services/Service/List")';
        $.get(url)
            .done(function (result) {
                $('#service-list').html(result);
            })
            .error(function () {
                window.location.reload();
            });
    }

</script>
