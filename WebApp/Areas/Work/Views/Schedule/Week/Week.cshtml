@model WeekViewModel

@if (Model != null)
{
    <div style="display:flex; flex-direction: row; flex-wrap: wrap;">
        @foreach (var day in Model.Days)
        {
            <div style="padding:10px; min-width: 400px;">
                <div style="padding-top:10px;">
                    <strong>@day.DayName</strong>
                </div>
                <div style="display:flex; flex-wrap:nowrap; flex-direction:row; align-content:center; align-self:stretch;">
                    <div style="padding-top:5px; padding-bottom:5px">
                        @foreach (var address in day.Addresses)
                    {
                            <div>@address</div>
                        }
                    </div>
                </div>
                <table class="table table-condensed table-hover">
                    @foreach (var appointment in day.Appointments.OrderBy(c => c.AppointmentDate).ThenBy(c => c.StartTime))
                    {
                        <tr onclick="showCaseDetails(@appointment.ServiceRequestId)" ondblclick="showCaseDetails(@appointment.ServiceRequestId)" style="cursor:pointer;">
                            @Html.Partial("Week/Appointment", appointment)   
                        </tr>

                    }
                </table>
            </div>
        }
    </div>
}
else
{
    <p></p>
    <p><strong> No assessments today</strong></p>
}
