    </div>
</div>
<div class="row collapse" id="PreviousWeeks">
    @foreach (var item in Model.TaskCards)
    {
        <div class="col-xs-12 col-sm-6 col-md-3">
            <a href="#@item.CardId" data-toggle="collapse" class="btn btn-default" style="border: none;">
                <div>
                    <strong class="h2" style="padding-right:10px;">@item.Total</strong>
                    <small>@item.TaskName</small>
                </div>
