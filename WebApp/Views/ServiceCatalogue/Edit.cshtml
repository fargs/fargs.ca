@model WebApp.FormModels.ServiceCatalogueForm

@{ 

    var userId = User.Identity.GetGuidUserId();
    var userContext = User.Identity.GetPhysicianContext();
    var physicianId = userContext == null ? (Guid?)null : userContext.Id;
    var currentContextId = physicianId.GetValueOrDefault(userId);
    var roleId = User.Identity.GetRoleId();
}
<div>
    <div class="modal-header">
        Service Catalogue Price
    </div>
    <div class="modal-body">
        <form id="servicecatalogue-editform">
            @Html.Hidden("CompanyId", Model.CompanyId)
            @Html.Hidden("UserId", currentContextId)
            @Html.Hidden("ServiceId", Model.ServiceId)
            @Html.Hidden("LocationId", Model.LocationId)
            Price: <input type="text" name="Price" value="@Model.Price" />
        </form>
    </div>
    <div class="modal-footer">
        <button onclick="serviceCatalogueSaveChanges($('#servicecatalogue-editform'))" type="submit" class="btn btn-primary">Submit</button>
    </div>
</div>