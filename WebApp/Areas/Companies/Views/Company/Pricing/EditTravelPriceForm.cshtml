@model EditTravelPriceFormModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">
        Travel Price
    </h4>
</div>
<div class="modal-body">
    <form id="company-form">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group">
            <label class="control-label">Price</label>
            <div>
                @Html.TextBox("Price", Model.Price, new { @class = "form-control" })
                @Html.ValidationMessage("Price", "", new { @class = "text-danger" })
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="submit" onclick="saveEditTravelPriceForm('@Model.CompanyId', $('#company-form'))" class="btn btn-primary">Save</button>
</div>