@using Microsoft.AspNet.Identity
@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Orvosi Medical</title>
    @Styles.Render("~/Content/landing")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <a name="home"></a>
    <div class="intro-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <h1>Orvosi</h1>
                        <hr class="intro-divider">
                        @if (Request.IsAuthenticated)
                        {
                            <h3>Welcome @(User.Identity.GetUserName())!</h3>
                            <br />
                            <ul class="list-inline intro-social-buttons">
                                <li>
                                    <a href="~/Dashboard" class="btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i><span class="network-name">Go To Your Portal</span></a>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <h3>Time is money. Fill your day with more of both.</h3>
                            <br />
                            <ul class="list-inline intro-social-buttons">
                                <li>
                                    <a href="~/Account/Login" class="btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Login</span></a>
                                </li>
                                <li>
                                    <a href="~/Account/Register" class="btn btn-success btn-lg"><i class="fa fa-github fa-fw"></i> <span class="network-name">Register</span></a>
                                </li>
                                <li>
                                    <a href="~/Home/Contact" class="btn btn-default btn-lg"><i class="fa fa-github fa-fw"></i> <span class="network-name">Contact</span></a>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <p class="copyright text-muted small">Orvosi &copy; @DateTime.Now.Year. All Rights Reserved</p>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>
